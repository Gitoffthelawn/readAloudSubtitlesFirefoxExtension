{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "0.1.7.12",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": ["storage", "tabs"],
  "browser_action": {
    "default_popup": "settings.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "all_frames": false,
      "run_at": "document_end",
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": [
      "background/defaults.js",
      "background/google-translate.js",
      "background/tts-engines.js",
      "background/speech.js",
      "background/document.js",
      "background/events.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": ["settings.html", "content.js"],
  "options_ui": {
    "page": "settings.html",
    "browser_style": false
  },
  "developer": {
    "name": "conrad.rzuc@gmail.com",
    "url": "https://github.com/conradRz/"
  },
  "homepage_url": "https://github.com/conradRz/readOutLoudSubtitlesFirefoxExtension"
}
