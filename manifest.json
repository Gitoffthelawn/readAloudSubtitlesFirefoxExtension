{
  "manifest_version": 2,
  "name": "YouTube Subtitle Reader",
  "version": "0.1",
  "description": "A Firefox extension that reads YouTube subtitles out loud using TTS.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["storage", "scripting", "activeTab",
  "tabs", "https://*/"],
  "browser_action": {
    "default_popup": "settings.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/watch*"
      ],
      "all_frames": false,
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "settings.html",
    "content.js"
  ],
  "developer": {
    "name": "Conrad Rzuc",
    "url": "https://github.com/conradOU/"
  },
  "homepage_url": "https://github.com/conradOU/readOutLoudSubtitlesFirefoxExtension"
}